<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:v="clr-namespace:System;assembly=mscorlib">
    <Style x:Key="TextBox" TargetType="TextBox">
        <Setter Property="BorderThickness" Value="0,0,0,0"/>
        <Setter Property="Background" Value="#591E6E"/>
        <Setter Property="Foreground" Value="#FFFFFF"/>
        <Setter Property="Text" Value="Ваш город"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="TextAlignment" Value="Center"/>
        <Setter Property="FontFamily" Value="Jura"/>
        <Setter Property="Opacity" Value="0.5"/>
    </Style>
    <Style x:Key="TextBoxs" TargetType="TextBox">
        <Setter Property="BorderThickness" Value="0,0,0,0"/>
        <Setter Property="Background" Value="#F8C5B4"/>
        <Setter Property="Foreground" Value="#FFFFFF"/>
        <Setter Property="Text" Value="Ваш город"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="TextAlignment" Value="Center"/>
        <Setter Property="FontFamily" Value="Jura"/>
        <Setter Property="Opacity" Value="0.8"/>
    </Style>
    <Style x:Key="GridSettingCart" TargetType="Grid">
        <Setter Property="Background" Value="#591E6E"/>
    </Style>
    <Style x:Key="Button" TargetType="Button">
        <Setter Property="BorderThickness" Value="0,0,0,0"/>
        <Setter Property="Background" Value="#591E6E"/>
        <Setter Property="Foreground" Value="#FFFFFF"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="{TemplateBinding Background}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#F8C5B4"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    <Style x:Key="TextBlock" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Jura" />
        <Setter Property="Foreground" Value="#FFFFFF"/>
    </Style>
    <Style x:Key="Grid" TargetType="Grid">
        <Setter Property="Background" Value="#F8C5B4"/>
        <Setter Property="Opacity" Value="0.8"/>
    </Style>
    <Style TargetType="{x:Type Window}">
        <Setter Property="FontFamily" Value="Jura" />
    </Style>
    <Style x:Key="them" TargetType="Grid">
        <Setter Property="Background">
            <Setter.Value>
                <ImageBrush ImageSource="/SunClouds/Night.png"/>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="panel" TargetType="Button">
        <Setter Property="Foreground" Value="#FFFFFF"/>
        <Setter Property="BorderThickness" Value="0,0,0,0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border Background="{TemplateBinding Background}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{x:Null}"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    <Style x:Key="WrapPanel" TargetType="WrapPanel">
        <Setter Property="Background" Value="#F8C5B4"/>
        <Setter Property="Opacity" Value="0.75"/>
    </Style>
