            <WrapPanel Style="{DynamicResource WrapPanel}" Margin="5,77,5,94" Height="166" Width="{Binding ElementName=MyScrollViewer, Path=ActualWidth}">
                <WrapPanel.Resources>
                    <Style TargetType="{x:Type local:for_wrappanel}">
                        <Setter Property="Margin" Value="0,10,35,0" />
                        <Setter Property="Padding" Value="9" />
                    </Style>
                </WrapPanel.Resources>
                <WrapPanel.Children>
                    <local:for_wrappanel/>
                    <local:for_wrappanel/>
                    <local:for_wrappanel/>
                    <local:for_wrappanel/>
                    <local:for_wrappanel/>
                    <local:for_wrappanel/>
                    <local:for_wrappanel/>
                    <local:for_wrappanel/>
                </WrapPanel.Children>
            </WrapPanel>
        </Grid>
    </Grid>
</Page>
