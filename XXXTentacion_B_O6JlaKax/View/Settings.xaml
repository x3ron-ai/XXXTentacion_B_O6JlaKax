        </Grid>
        <Grid Margin="0,0,3,1" Grid.Column="2" Grid.Row="2">
            <TextBlock Style="{DynamicResource TextBlock}" Margin="132,0,130,306" TextWrapping="Wrap" Text="Ваш основной город:" TextAlignment="Center" FontSize="18" Height="21" VerticalAlignment="Bottom"/>
